<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="bg.tilchev.hw03task01.MainActivity">

    <fragment
        android:id="@+id/fragment_list"
        class="bg.tilchev.hw03task01.RecyclerFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".35"
        tools:layout="@layout/list_fragment_layout" />

    <fragment
        android:id="@+id/fragment_item"
        class="bg.tilchev.hw03task01.ItemFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".65"
        tools:layout="@layout/item_fragment_layout" />

</LinearLayout>
