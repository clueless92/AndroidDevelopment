<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/price"
        android:layout_toStartOf="@+id/price"
        android:src="@drawable/noimage1" />

    <!--Strings aren't extracted as resources,
     because they are left as placeholders-->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonMinus"
        android:layout_alignLeft="@+id/price"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/price"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/imageButtonX"
        android:layout_toStartOf="@+id/imageButtonX"
        android:text="Name"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!--Strings aren't extracted as resources,
     because they are left as placeholders-->
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cartQuantityText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/imageButtonMinus"
        android:layout_toRightOf="@+id/imageButtonMinus"
        android:gravity="bottom|end"
        android:text="##.##$"
        android:textColor="#000"
        android:textSize="15sp" />

    <!--Strings aren't extracted as resources,
     because they are left as placeholders-->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description..."
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButtonPlus"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/cartQuantityText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img"
        android:layout_toEndOf="@+id/description"
        android:layout_toRightOf="@+id/description"
        android:background="@android:color/transparent"
        android:src="@drawable/plusthin2" />

    <ImageButton
        android:id="@+id/imageButtonMinus"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/cartQuantityText"
        android:layout_toEndOf="@+id/cartQuantityText"
        android:layout_toRightOf="@+id/cartQuantityText"
        android:background="@android:color/transparent"
        android:src="@drawable/minusthin2" />

    <!--Strings aren't extracted as resources,
     because they are left as placeholders-->
    <TextView
        android:id="@+id/cartQuantityText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/img"
        android:layout_toEndOf="@+id/imageButtonPlus"
        android:layout_toRightOf="@+id/imageButtonPlus"
        android:editable="false"
        android:gravity="center"
        android:text="1"
        android:textColor="#000"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/imageButtonX"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/xthin3" />

</RelativeLayout>
